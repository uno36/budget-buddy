          <img src="<%= asset_path('arrow-left.png') %>" alt="Arrow" class="d-lg-none d-lg-block" />

        
        <div class="text-center">
          <span class="navbar-brand text-white">REGISTER</span>
        </div>
        <div class="text-end">
          <a href="#" class="nav-link text-white">Next</a>
        </div>
