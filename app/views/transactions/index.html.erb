<h1>Transactions for <%= @category.name %></h1>

<div class="total-amount">
  <strong>Total Amount:</strong>
  <%= number_to_currency(@total_amount, precision: 2) %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date.strftime("%Y-%m-%d") %></td>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.amount, precision: 2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add a New Transaction", new_category_transaction_path(@category), class: "btn btn-primary" %>

<%= link_to "Back", categories_path, class: "btn btn-secondary" %>
